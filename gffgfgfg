from telegram import Update, InlineKeyboardButton, InlineKeyboardMarkup
from telegram.ext import (
    Application, CommandHandler, MessageHandler, filters, ContextTypes, CallbackQueryHandler
)
import logging
import random
import string
import re

# –õ–æ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ
logging.basicConfig(format='%(asctime)s - %(name)s - %(levelname)s - %(message)s', level=logging.INFO)
logger = logging.getLogger(__name__)

# ‚öôÔ∏è –ù–ê–°–¢–†–û–ô–ö–ò
ADMIN_ID = 123456789          # üëà –ó–ê–ú–ï–ù–ò –ù–ê –°–í–û–ô ID
TOKEN = "YOUR_BOT_TOKEN_HERE" # üëà –ó–ê–ú–ï–ù–ò –ù–ê –¢–û–ö–ï–ù –ë–û–¢–ê

# üß† –•—Ä–∞–Ω–∏–ª–∏—â–∞
user_ids = set()
user_nicknames = {}
message_logs = []             # [(user_id, content, content_type), ...]
active_messages = {}

# –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –∞–Ω–æ–Ω–∏–º–Ω–æ–≥–æ –Ω–∏–∫–∞
def generate_nickname():
    return f"–¢–µ–Ω—å ‚Ññ{random.randint(10, 999)}"

# –ì–µ–Ω–µ—Ä–∞—Ü–∏—è ID –¥–ª—è —Å–æ–æ–±—â–µ–Ω–∏—è (–¥–ª—è —Ä–µ–∞–∫—Ü–∏–π)
def generate_message_id():
    return ''.join(random.choices(string.ascii_uppercase + string.digits, k=6))

# –≠–∫—Ä–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ Markdown-—Å–∏–º–≤–æ–ª–æ–≤ (—á—Ç–æ–±—ã –Ω–µ –ª–æ–º–∞–ª–∞—Å—å —Ä–∞–∑–º–µ—Ç–∫–∞ —É –∞–¥–º–∏–Ω–∞)
def escape_markdown(text: str) -> str:
    escape_chars = r'\_*[]()~`>#+-=|{}.!'
    return re.sub(f'([{re.escape(escape_chars)}])', r'\\\1', str(text))

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user = update.effective_user
    if user.id not in user_nicknames:
        nickname = generate_nickname()
        user_nicknames[user.id] = nickname
        logger.info(f"–ù–æ–≤—ã–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å {user.id} -> {nickname}")

    user_ids.add(user.id)
    await update.message.reply_text(
        f"üëã –ü—Ä–∏–≤–µ—Ç, {user_nicknames[user.id]}!\n"
        "–¢—ã –≤ *–£–ª—å—Ç—Ä–∞ –ê–Ω–æ–Ω–∏–º–Ω–æ–º –ß–∞—Ç–µ* üé≠\n\n"
        "üìå –ü–∏—à–∏ —á—Ç–æ —É–≥–æ–¥–Ω–æ ‚Äî —Ç–µ–∫—Å—Ç, —Å–∏–º–≤–æ–ª—ã, —ç–º–æ–¥–∑–∏, –≥–æ–ª–æ—Å–æ–≤—ã–µ.\n"
        "üìå –ü–æ–¥–¥–µ—Ä–∂–∏–≤–∞—é—Ç—Å—è –í–°–ï —Å–∏–º–≤–æ–ª—ã: _ - @ # $ % & * + = ? ! ~ ^ {{ }} [ ] ( ) | \\ / : ; \" ' < > –∏ –¥–∞–∂–µ üåàüöÄ\n"
        "üìå –û—Ç–≤–µ—Ç—å –Ω–∞ —Å–æ–æ–±—â–µ–Ω–∏–µ ‚Äî –ø–æ—Å—Ç–∞–≤—å —Ä–µ–∞–∫—Ü–∏—é —Å—Ç–∏–∫–µ—Ä–æ–º.\n\n"
        "–ù–∞—Å–ª–∞–∂–¥–∞–π—Å—è —Å–≤–æ–±–æ–¥–æ–π –≤—ã—Ä–∞–∂–µ–Ω–∏—è! üòâ",
        parse_mode="Markdown"
    )

# –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ç–µ–∫—Å—Ç–∞ –∏ –≥–æ–ª–æ—Å–æ–≤—ã—Ö
async def handle_message(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user = update.effective_user

    if user.id not in user_nicknames:
        user_nicknames[user.id] = generate_nickname()

    if update.message.text:
        content = update.message.text
        content_type = "text"
    elif update.message.voice:
        content = update.message.voice.file_id
        content_type = "voice"
    else:
        await update.message.reply_text("–ü–æ–¥–¥–µ—Ä–∂–∏–≤–∞—é—Ç—Å—è —Ç–æ–ª—å–∫–æ —Ç–µ–∫—Å—Ç –∏ –≥–æ–ª–æ—Å–æ–≤—ã–µ.")
        return

    msg_id = generate_message_id()
    active_messages[msg_id] = {
        'content': content,
        'type': content_type,
        'author_id': user.id,
        'reactions': []
    }

    # –§–æ—Ä–º–∏—Ä—É–µ–º –∏–Ω—Ñ–æ –¥–ª—è –∞–¥–º–∏–Ω–∞ ‚Äî —ç–∫—Ä–∞–Ω–∏—Ä—É–µ–º —Å–ø–µ—Ü—Å–∏–º–≤–æ–ª—ã
    username_display = user.username or "‚Äî"
    sender_info = f"üë§ –ê–≤—Ç–æ—Ä: {escape_markdown(user_nicknames[user.id])} (@{escape_markdown(username_display)}) [ID: {user.id}]"
    message_logs.append((user.id, content, content_type))

    # –î–ª—è —Ä–∞—Å—Å—ã–ª–∫–∏ ‚Äî –æ–±—ã—á–Ω—ã–π —Ç–µ–∫—Å—Ç, –±–µ–∑ Markdown (—á—Ç–æ–±—ã –Ω–∏—á–µ–≥–æ –Ω–µ –ª–æ–º–∞–ª–æ—Å—å)
    broadcast_text = f"üì© –ê–Ω–æ–Ω–∏–º–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ [{msg_id}]\n{content}" if content_type == "text" \
        else f"üì© –ê–Ω–æ–Ω–∏–º–Ω–æ–µ –≥–æ–ª–æ—Å–æ–≤–æ–µ [{msg_id}]"

    for chat_id in list(user_ids):
        try:
            if chat_id == ADMIN_ID:
                # –ê–¥–º–∏–Ω—É ‚Äî —Å Markdown –∏ —ç–∫—Ä–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ–º
                full_text = f"üì© *–ê–Ω–æ–Ω–∏–º–∫–∞* `[{msg_id}]`\n{sender_info}\n\n{escape_markdown(content)}" if content_type == "text" \
                    else f"üì© *–ì–æ–ª–æ—Å–æ–≤–æ–µ* `[{msg_id}]`\n{sender_info}"
                await context.bot.send_message(chat_id=chat_id, text=full_text, parse_mode="MarkdownV2")
                if content_type == "voice":
                    await context.bot.send_voice(chat_id=chat_id, voice=content)
            else:
                # –û–±—ã—á–Ω—ã–º –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º ‚Äî plain text
                await context.bot.send_message(chat_id=chat_id, text=broadcast_text)
                if content_type == "voice":
                    await context.bot.send_voice(chat_id=chat_id, voice=content)
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ {chat_id}: {e}")

    await update.message.reply_text(f"‚úÖ –°–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –≤—Å–µ–º. ID: {msg_id}")

# –û–±—Ä–∞–±–æ—Ç–∫–∞ —Å—Ç–∏–∫–µ—Ä–æ–≤ –∫–∞–∫ —Ä–µ–∞–∫—Ü–∏–π
async def handle_sticker(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user = update.effective_user
    sticker = update.message.sticker

    if not update.message.reply_to_message or not update.message.reply_to_message.from_user.id == context.bot.id:
        return

    reply_text = update.message.reply_to_message.text
    if not reply_text:
        return

    match = re.search(r'\[([A-Z0-9]{6})\]', reply_text)
    if not match:
        return

    msg_id = match.group(1)
    if msg_id not in active_messages:
        await update.message.reply_text("‚ùå –°–æ–æ–±—â–µ–Ω–∏–µ —É—Å—Ç–∞—Ä–µ–ª–æ.")
        return

    reaction = {
        'user_id': user.id,
        'sticker_id': sticker.file_id,
        'emoji': sticker.emoji or "‚ùì"
    }
    active_messages[msg_id]['reactions'].append(reaction)

    # –†–∞—Å—Å—ã–ª–∞–µ–º —Ä–µ–∞–∫—Ü–∏—é –≤—Å–µ–º ‚Äî plain text, –±–µ–∑ Markdown
    reaction_text = f"üí¨ –†–µ–∞–∫—Ü–∏—è –Ω–∞ [{msg_id}]: {reaction['emoji']}"
    for chat_id in list(user_ids):
        try:
            await context.bot.send_message(chat_id=chat_id, text=reaction_text)
            await context.bot.send_sticker(chat_id=chat_id, sticker=sticker.file_id)
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ —Ä–µ–∞–∫—Ü–∏–∏ {chat_id}: {e}")

    await update.message.reply_text("‚úÖ –†–µ–∞–∫—Ü–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∞ –∞–Ω–æ–Ω–∏–º–Ω–æ!")

# –ê–¥–º–∏–Ω-–ø–∞–Ω–µ–ª—å
async def admin_panel(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if update.effective_user.id != ADMIN_ID:
        await update.message.reply_text("üö´ –¢–æ–ª—å–∫–æ –¥–ª—è –∞–¥–º–∏–Ω–∞.")
        return

    keyboard = [
        [InlineKeyboardButton("üìä –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞", callback_data='stats')],
        [InlineKeyboardButton("üìú –ü–æ—Å–ª–µ–¥–Ω–∏–µ 10", callback_data='last10')],
        [InlineKeyboardButton("üì• –≠–∫—Å–ø–æ—Ä—Ç –ª–æ–≥–æ–≤", callback_data='export')]
    ]
    reply_markup = InlineKeyboardMarkup(keyboard)
    await update.message.reply_text("üîê –ê–¥–º–∏–Ω-–ø–∞–Ω–µ–ª—å", reply_markup=reply_markup)

async def button_handler(update: Update, context: ContextTypes.DEFAULT_TYPE):
    query = update.callback_query
    await query.answer()

    if query.data == 'stats':
        total_users = len(user_ids)
        total_messages = len(message_logs)
        await query.edit_message_text(
            f"üìä –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞\n"
            f"üë• –£—á–∞—Å—Ç–Ω–∏–∫–æ–≤: {total_users}\n"
            f"üí¨ –°–æ–æ–±—â–µ–Ω–∏–π: {total_messages}"
        )

    elif query.data == 'last10':
        last_10 = message_logs[-10:]
        text = "üìú –ü–æ—Å–ª–µ–¥–Ω–∏–µ 10 —Å–æ–æ–±—â–µ–Ω–∏–π:\n\n"
        for uid, msg, _ in last_10:
            nick = user_nicknames.get(uid, "???")
            # –í –ª–æ–≥–∞—Ö ‚Äî –∫–∞–∫ –µ—Å—Ç—å, –±–µ–∑ —ç–∫—Ä–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
            text += f"üí¨ {nick}: {msg[:100]}...\n"
        await query.edit_message_text(text or "–ü—É—Å—Ç–æ")

    elif query.data == 'export':
        if not message_logs:
            await query.edit_message_text("–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö.")
            return
        filename = f"anon_chat_full_log_{int(time.time())}.txt"
        with open(filename, "w", encoding="utf-8") as f:
            f.write("–£–õ–¨–¢–†–ê –ê–ù–û–ù–ò–ú–ù–´–ô –ß–ê–¢ ‚Äî –ü–û–õ–ù–´–ô –õ–û–ì\n")
            f.write("="*50 + "\n")
            for uid, msg, msg_type in message_logs:
                nick = user_nicknames.get(uid, "???")
                username = "‚Äî" if not (u := next((u for u in user_nicknames if user_nicknames[u] == nick), None)) else getattr(await context.bot.get_chat(u), 'username', '‚Äî')
                line = f"[{msg_type.upper()}] | {nick} (@{username}) (ID:{uid}) : {msg}\n"
                f.write(line)
        await query.message.reply_document(document=open(filename, 'rb'))
        await query.edit_message_text("‚úÖ –≠–∫—Å–ø–æ—Ä—Ç –∑–∞–≤–µ—Ä—à—ë–Ω.")

def main():
    application = Application.builder().token(TOKEN).build()

    application.add_handler(CommandHandler("start", start))
    application.add_handler(CommandHandler("admin", admin_panel))
    application.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, handle_message))
    application.add_handler(MessageHandler(filters.VOICE, handle_message))
    application.add_handler(MessageHandler(filters.Sticker.ALL, handle_sticker))
    application.add_handler(CallbackQueryHandler(button_handler))

    logger.info("üöÄ –£–õ–¨–¢–†–ê –ê–ù–û–ù–ò–ú–ù–´–ô –ß–ê–¢-–ë–û–¢ –ó–ê–ü–£–©–ï–ù! –ü–æ–¥–¥–µ—Ä–∂–∫–∞ –í–°–ï–• —Å–∏–º–≤–æ–ª–æ–≤ ‚úÖ")
    application.run_polling()

if __name__ == '__main__':
    main()
